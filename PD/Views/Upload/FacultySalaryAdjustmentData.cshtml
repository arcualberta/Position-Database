<h2> Upload </h2>
<h4>Please select a faculty/FSO salary adjustment data file</h4>
<hr />

@if (!string.IsNullOrEmpty(ViewBag.Message))
{
    <div class="alert @ViewBag.MessageClass">
        <div>@ViewBag.Message</div>
        <div>Uploaded File Path: @ViewBag.FilePath</div>
    </div>

}

<div class="row">
    @{ if (ViewBag.UploadStatus == true)
        {
            <div class="col-md-12">
                <div class="alert alert-success">Data uploading successful</div>
            </div>
        }
    }
    <div class="col-md-12">
        <form method="post" enctype="multipart/form-data" asp-controller="Upload" asp-action="FacultySalaryAdjustmentData">
            <div class="form-group">
                <div class="col-md-10">
                    <p>Upload one or more files using this form:</p>
                    <input type="file" name="files" multiple />
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-10">
                    <input type="submit" value="Upload" />
                </div>
            </div>
        </form>
        <!--
        <form asp-action="FacultySalaryAdjustmentData" asp-controller="Upload" enctype="multipart/form-data" method="post">
            <div class="form-group">
                <input type="file" name="FileUpload" />
            </div>
            <div class="form-group">
                <input type="submit" value="Upload" class="btn btn-default" />
            </div>
        </form>
        -->
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
