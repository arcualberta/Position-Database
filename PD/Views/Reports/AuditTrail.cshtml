@model IEnumerable<PD.Models.AuditRecord>

@{ 
    IPdDataProtector dp = ViewBag.DataProtector as IPdDataProtector;

}
<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Employee
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Timestamp)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Message)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AuditType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SalaryCycleStartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SalaryCycleEndDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PositionAssignment)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsHistoric)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @dp.Decrypt(item.PositionAssignment.Person.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Timestamp)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Message)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AuditType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SalaryCycleStartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SalaryCycleEndDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PositionAssignment.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsHistoric)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
