@model PD.Models.PositionAssignment
@using PD.Models.AppViewModels.Filters;

@{ PositionFilter filter = ViewBag.Filter as PositionFilter;}
<div>
    <h4>Position Assignment</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Status)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.StartDate)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.StartDate)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.EndDate)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.EndDate)
        </dd>
        @*<dt>
                @Html.DisplayNameFor(model => model.SalaryCycleStartMonth)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.SalaryCycleStartMonth)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.SalaryCycleStartDay)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.SalaryCycleStartDay)
            </dd>*@
        <dt>
            @Html.DisplayNameFor(model => model.Position)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Position.Title)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Person)
        </dt>
        <dd>
            @{
                IPdDataProtector dp = ViewBag.DataProtector as IPdDataProtector;
                string name = dp.Decrypt(@Model.Person.Name);
            }
            <span title="@name">@Html.DisplayFor(model => model.Person.EmployeeId)</span>
        </dd>
    </dl>

    <div class="audit-summary">
        <h4>Audit Trail</h4>
        @{
            DateTime cycle = Model.GetSalaryCycleStartDate(filter.Date);
            foreach (var log in Model.AuditTrail)
            {
                if (log.SalaryCycleStartDate == cycle)
                {
                    <div>
                        <div>@*@log.Timestamp.ToLongDateString()*@</div>
                        <div>@Html.Raw(log.Message)</div>
                    </div>
                }
            }
        }
    </div>
</div>
<br />
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="positions" asp-all-route-data="@{new Dictionary<string, string>() { { "filter.Date", filter.Date.ToShortDateString() } }}">Back to List</a>
</div>
