<h2> Upload </h2>
<h4>Please select a faculty/FSO salary adjustment data file</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="FacultySalaryAdjustmentData" asp-controller="Upload" enctype="multipart/form-data" method="post">
            <div class="form-group">
                <input type="file" name="FileUpload" />
            </div>
            <div class="form-group">
                <input type="submit" value="Upload" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
